@model IEnumerable<ServiceStation.Order>

@{
    ViewBag.Title = "Orders";
}

<h2>Orders</h2>

<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Date)
        </th>
        <th>
            Order amount
        </th>
        <th>
            Order status
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Car.Make)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Date)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.OrderAmount)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.OrderStatus)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Car.Make)
        </td>
        <td>
            @Html.ActionLink("Create new order", "Create", "Order")
            @Html.ActionLink("Edit", "Edit", "Order", new { id=item.IdOrder }, null)
            @Html.ActionLink("Delete", "Delete", "Order", new { id=item.IdOrder }, null)
        </td>
    </tr>
}

</table>

<p>
    @Html.ActionLink("Back to List", "Index")
</p>