@model IEnumerable<ServiceStation.Order>

@{
    ViewBag.Title = "Index";
}

<h2>Information about orders</h2>

<p>
    @Html.ActionLink("Create new order", "Create")
</p>
<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Date)
        </th>
        <th>
            Order amount
        </th>
        <th>
            Order status
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Car.Make)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Date)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.OrderAmount)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.OrderStatus)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Car.Make)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.IdOrder })
            @Html.ActionLink("Details", "Details", new { id=item.IdOrder })
            @Html.ActionLink("Delete", "Delete", new { id=item.IdOrder })
        </td>
    </tr>
}

</table>

<div>
    @Html.ActionLink("Home page", "Index", "Home")
</div>
